<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    {{!-- <link rel="stylesheet" href="/src/resources/views/css/styles.css"> --}}
    <style>
        .container {
        max-width: 800px;
        margin: 0 auto;
        }

        .title {
        font-size: 24px;
        color: #333;
        }

        .task {
        margin-bottom: 10px;
        padding: 10px;
        background-color: #f0f0f0;
        border-radius: 5px;
        }

        .completed {
        text-decoration: line-through;
        opacity: 0.5;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="title">Todo List</h1>
        <ul id="taskList">
            {{#each tasks}}
            <li class="{{#if completed}}completed{{/if}}">
                {{text}}
                <button onclick="toggleTask('{{_id}}')">{{#if completed}}Undo{{else}}Done{{/if}}</button>
            </li>
            {{/each}}
        </ul>
        <hr />
        <div class="counter-container">
            <div id="task-counters">
                Completed: <span id="completed-counter">0</span> | Uncompleted: <span id="uncompleted-counter">0</span>
            </div>
        </div>
    </div>
</body>
<script>
    function toggleTask(id) {
        fetch(`/edit/toggle/${id}`, {
            method: 'POST'
        })
        .then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                console.error('Error toggling task');
            }
        })
        .catch(error => console.error(error));
    }

    const completedCounter = document.getElementById("completed-counter");
    const uncompletedCounter = document.getElementById("uncompleted-counter");

    function updateCounters() {
        const completedTasks = document.querySelectorAll(".completed").length;
        const uncompletedTasks = document.querySelectorAll("li:not(.completed)").length;

        completedCounter.textContent = completedTasks;
        uncompletedCounter.textContent = uncompletedTasks;
    }

    document.addEventListener("DOMContentLoaded", updateCounters);

    document.querySelectorAll(".task-checkbox").forEach(checkbox => {
        checkbox.addEventListener("click", function () {
            const li = this.closest("li");
            li.classList.toggle("completed", this.checked);
            updateCounters();
        });
    });
</script>
</html>
